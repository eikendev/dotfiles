# NOTE: Inspired by https://github.com/dikiaap/dotfiles.

# Save HTML/CSS documents with proper extensions.
adjust_extension = on

# Follow FTP links from HTML documents.
follow_ftp = on

# Disable writing to history file.
hsts_file = /dev/null

# Use UTF-8 as the default system encoding.
local_encoding = UTF-8

# Don't ascend to the parent directory.
no_parent = on

# Retry even if connection is refused.
retry_connrefused = on

# Setting this to off makes Wget not download /robots.txt file.
robots = off

# Print server response.
server_response = on

# Force to display the progress bar in any verbosity.
show_progress = on

# Set all timeout values.
timeout = 60

# Don't re-retrieve files unless newer than local.
timestamping = on

# Retry a few times when a download fails.
tries = 3

# Use the last component of a redirection URL for the local file name.
trust_server_names = on

# Do not send a User-Agent header. This can break communication with some APIs.
#user_agent =
