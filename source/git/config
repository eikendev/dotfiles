[core]
	whitespace = trailing-space,tabwidth=4
	pager = delta --color-only | less -R

[interactive]
    diffFilter = delta --color-only

[delta]
    features = line-numbers
    syntax-theme = Dracula

[delta "line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#444444"
    line-numbers-zero-style = "#444444"
    line-numbers-plus-style = "#444444"
    line-numbers-left-format = "{nm:>4}┊"
    line-numbers-right-format = "{np:>4}│"
    line-numbers-left-style = brightblack
    line-numbers-right-style = brightblack

[alias]
	exec = "!exec "
	hash = "rev-parse HEAD"
	history = "log --first-parent --date-order --pretty=format:'%C(#e5c07b)%h%Creset %C(#98c379)%an%Creset %C(#abb2bf)(%ar)%Creset%C(red)%d%Creset ➔ %<(64,trunc)%s' --decorate --abbrev-commit"
	stats = "shortlog -sn --no-merges"
	tree = "log --graph --date-order --pretty=format:'%C(#e5c07b)%h%Creset %C(#98c379)%an%Creset %C(#abb2bf)(%ar)%Creset%C(red)%d%Creset ➔ %<(64,trunc)%s' --decorate --abbrev-commit"
	rmgone = !"git fetch -p ; git branch -r | awk '{print $1}' | grep -E -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk '{print $1}' | xargs git branch -d"

[commit]
	verbose = true

[diff]
	prompt = false
	tool = vimdiff
	algorithm = patience

[gc]
	pruneexpire = now

[gpg]
	program = gpg2

[merge]
	tool = vimdiff
	conflictstyle = zdiff3

[mergetool]
	keepBackup = false

[mergetool "vimdiff"]
	cmd = nvim -d "$BASE" "$LOCAL" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'
	trustExitCode = false

[mergetool "fugitive"]
	cmd = nvim "$MERGED" -c 'Gvdiffsplit!'
	trustExitCode = false

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	default = simple
	followTags = true

[rebase]
	autoStash = true
	stat = true
	updateRefs = true

[status]
	branch = true

[user]
	useConfigOnly = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[init]
	defaultBranch = main
