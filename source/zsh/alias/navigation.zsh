# Easier navigation in directory hierarchy.
alias   ..='cd ..'
alias  ...='cd ../..'
alias  cls='clear && ls'

# Quick navigation via virtual directories.
alias gtd='cd ~dotfiles'
alias gtg='cd ~git'

# Track the working path of nnn.
# -e to open text files using $VISUAL
# -H to show hidden files
alias n='nnn-cd -e -H'
